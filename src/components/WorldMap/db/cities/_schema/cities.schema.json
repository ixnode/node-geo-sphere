{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Used for validation of cities.json JSON file.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "data": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/City"
            }
        }
    },
    "required": ["data"],
    "additionalProperties": false,

    "definitions": {
        "City": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "state": {
                    "type": ["string", "null"],
                    "pattern": "^[a-z]{2}-[a-z0-9]{2,3}$"
                },
                "priority": {
                    "type": "integer",
                    "enum": [1, 2, 3]
                },
                "size": {
                    "type": "string",
                    "enum": ["standard", "smaller", "bigger"]
                },
                "coordinate": {
                    "$ref": "#/definitions/Coordinate"
                },
                "coordinateDisplay": {
                    "$ref": "#/definitions/Coordinate"
                },
                "country": {
                    "type": "string",
                    "pattern": "^[a-z]{2}$"
                },
                "type": {
                    "type": "string",
                    "enum": ["capital", "state-capital", "city"]
                },
                "population": {
                    "type": ["number", "null"]
                },
                "area": {
                    "type": ["number", "null"]
                },
                "altitude": {
                    "type": ["number", "null"]
                },
                "translation": {
                    "type": "object",
                    "patternProperties": {
                        "^(cs|de|en|es|fr|hr|it|pl|sv)$": {
                            "type": ["string", "null"]
                        }
                    },
                    "required": ["cs", "de", "en", "es", "fr", "hr", "it", "pl", "sv"],
                    "additionalProperties": false
                }
            },
            "required": ["name", "state", "priority", "size", "coordinate", "country", "type", "population", "translation"],
            "additionalProperties": false
        },
        "Coordinate": {
            "type": "object",
            "properties": {
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                }
            },
            "required": ["latitude", "longitude"],
            "additionalProperties": false
        }
    }
}
