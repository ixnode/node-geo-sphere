{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Used for validation of cities.json JSON file.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "data": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "priority": {
                        "type": "integer",
                        "enum": [1, 2, 3]
                    },
                    "size": {
                        "type": "string",
                        "enum": ["standard", "smaller", "bigger"]
                    },
                    "coordinate": {
                        "type": "object",
                        "properties": {
                            "latitude": {
                                "type": "number"
                            },
                            "longitude": {
                                "type": "number"
                            }
                        },
                        "required": ["latitude", "longitude"],
                        "additionalProperties": false
                    },
                    "country" : {
                        "type": "string",
                        "pattern": "^[a-z]{2}$"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["capital", "state-capital", "city"]
                    },
                    "population": {
                        "type": "number"
                    },
                    "translation": {
                        "type": "object",
                        "patternProperties": {
                            "^(cs|de|en|es|fr|hr|it|pl|sv)$": {
                                "type": ["string", "null"]
                            }
                        },
                        "required": ["cs", "de", "en", "es", "fr", "hr", "it", "pl", "sv"],
                        "additionalProperties": false
                    }
                },
                "required": ["name", "priority", "size", "coordinate", "country", "type", "population", "translation"],
                "additionalProperties": false
            }
        }
    },
    "required": ["data"],
    "additionalProperties": false
}