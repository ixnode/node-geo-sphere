{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Used for validation of cities.json JSON file.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "data": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string",
                        "pattern": "^[a-z]{2}-[a-z]{2,3}$"
                    },
                    "country" : {
                        "type": "string",
                        "pattern": "^[a-z]{2}$"
                    },
                    "population": {
                        "type": ["number", "null"]
                    },
                    "area": {
                        "type": ["number", "null"]
                    },
                    "translation": {
                        "type": "object",
                        "patternProperties": {
                            "^(cs|de|en|es|fr|hr|it|pl|sv)$": {
                                "type": ["string", "null"]
                            }
                        },
                        "required": ["cs", "de", "en", "es", "fr", "hr", "it", "pl", "sv"],
                        "additionalProperties": false
                    }
                },
                "required": ["name", "country", "population", "area", "translation"],
                "additionalProperties": false
            }
        }
    },
    "required": ["data"],
    "additionalProperties": false
}